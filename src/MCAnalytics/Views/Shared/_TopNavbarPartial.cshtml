@using System.Security.Claims
@using MCAnalytics.Helpers

@if (User.IsSignedIn())
{
	<ul class="nav navbar-top-links navbar-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account <span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li><a asp-controller="Manage" asp-action="Index" title="Manage">Manage Account</a></li>
				<li><a asp-controller="Account" asp-action="Logout" title="Logout">Logout</a></li>
			</ul>
		</li>
	</ul>
} else
{
	<ul class="nav navbar-top-links navbar-right">
		<li class="@Html.IsActive("Account", "Login")">
			<a asp-controller="Account" asp-action="Login">Log in</a>
		</li>
		<li>
			<a asp-controller="Account" asp-action="Register">Register</a>
		</li>
	</ul>
}
